<!DOCTYPE HTML/>
<html>
  <head>
    <title>Catbit: Distance</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/CatbitStyle.css" />
    <%= stylesheet_link_tag "catbitStyle.css" %>
  </head>
  <body style="height: 100vh;">
    <ul id ="navBar" class="nav">
      <li id="back"><a href="home.html"><img src="/images/icon_nav_back.png" alt="Menu"></a></li>
      <li id="pageTitle"><h1>Distance</h1></li>
      <li id="pageIcon"><img src="/images/icon_miles.png" alt="icon_miles"></li>
    </ul>
    <div id="navSpaceHolder" class="navSpacer">Navigation Bar</div>
    
    <div class="iconArea">
    
      <div id="row1" class="statRowContainer">
        <div class="statRow">
        
          <div id="today" class="stat">
            <div class="statElementsContainer">
              <div class="smallStatLeft"><h1>Today</h1></div>
              <div class="smallStatRight"><h1><%= @miles %> miles</h1></div>
            </div>
          </div>
        </div>
      </div>
      
      <div id="row2" class="statRowContainer">
        <div class="statRow">
        
          <div id="Goal" class="stat">
            <div class="statElementsContainer">
              <div class="smallStatLeft"><h1>Goal</h1></div>
              <div class="smallStatRight"><h1><%= @goals %> miles</h1></div>
            </div>
          </div>
        </div>
      </div>
      
      <div id="row3" class="statLargeRowContainer">
        <div class="statLargeRow">
        
          <div id="thisWeek" class="stat">
            <div class="statElementsContainer">
              <div class="largeStatTitle"><h1>This Week</h1></div>
              
              <div class="barChartContainer">
                <!-- Bar Chart code from: http://www.williammalone.com/articles/html5-canvas-javascript-bar-graph/ -->
                <canvas id="canvasId" class="barChartCanvas"></canvas>
                <!--[if IE]><script src="/javascripts/excanvas.js"></script><![endif]-->
                <script src="/javascripts/barGraph.js"></script>
                  <script>
                    var cxt = document.getElementById("canvasId").getContext("2d");
                            
                    var graph = new BarGraph(cxt);
                    graph.margin = (0.023 * document.getElementById("canvasId").width);
                    graph.width = document.getElementById("canvasId").width;
                    graph.height = document.getElementById("canvasId").height;
                    graph.xAxisLabelArr = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];
                    graph.update(<%= @dataArray %>);
                  </script>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div id="row4" class="statLargeRowContainer">
        <div class="statLargeRow">
        
          <div id="weeklyBest" class="stat">
            <div class="statElementsContainer">
              <div class="largeStatTitle"  style="width: 97.67%;"><h1>Weekly Best</h1></div>
              <div class="largeStatValue"><%= @dataArray.max.round(2) %> </div>
              <div class="largeStatBottomText">Tuesday, March 31</div>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </body>
</html>
